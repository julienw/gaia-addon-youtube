#!/bin/sh

addpref() {
  key="$1"
  value="$2"

  echo "Waiting for device..."
  adb wait-for-device
  adb shell <<-EOF
    stop b2g
    cd /data/b2g/mozilla/*.default/
    echo 'user_pref("$key", $value);' >> prefs.js
    start b2g
    exit
EOF
}

rehash() {
  echo rehashing manifests...
  addpref 'gecko.buildID' '"1"'
}
